<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="memberModel"
            type="com.example.yuefenginterviewproject.data.model.MemberViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <TextView
            android:id="@+id/headerBg"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@color/color_cc1e05"
            app:layout_constraintBottom_toTopOf="@+id/scrList"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/memberQrcodeImg"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="5dp"
            android:background="@drawable/icon_member_qrcode_with_txt"
            android:foreground="?attr/selectableItemBackground"
            app:layout_constraintLeft_toLeftOf="@+id/headerBg"
            app:layout_constraintTop_toTopOf="@+id/headerBg" />

        <ImageButton
            android:id="@+id/memberSetImg"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/icon_setting_fff_24"
            android:foreground="?attr/selectableItemBackground"
            app:layout_constraintBottom_toBottomOf="@+id/memberQrcodeImg"
            app:layout_constraintLeft_toRightOf="@+id/memberQrcodeImg"
            app:layout_constraintTop_toTopOf="@+id/memberQrcodeImg" />

        <ImageButton
            android:id="@+id/memberhistoryImg"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/icon_history_fff_24"
            android:foreground="?attr/selectableItemBackground"
            app:layout_constraintBottom_toBottomOf="@+id/memberQrcodeImg"
            app:layout_constraintLeft_toRightOf="@+id/memberSetImg"
            app:layout_constraintTop_toTopOf="@+id/memberQrcodeImg" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="您好，*岳*"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="@+id/memberhistoryImg"
            app:layout_constraintLeft_toRightOf="@+id/memberhistoryImg"
            app:layout_constraintRight_toLeftOf="@+id/memberCartImg"
            app:layout_constraintTop_toTopOf="@+id/memberhistoryImg" />

        <ImageButton
            android:id="@+id/memberCartImg"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/icon_cart_fff_24"
            android:foreground="?attr/selectableItemBackground"
            app:layout_constraintBottom_toBottomOf="@+id/memberhistoryImg"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/memberhistoryImg" />

        <androidx.core.widget.NestedScrollView
            android:id="@+id/scrList"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/headerBg">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/bodyBg"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:background="@drawable/ic_topbg_member"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <include
                    android:id="@+id/include_member_con_button"
                    layout="@layout/layout_member_con_info"
                    app:layout_constraintLeft_toLeftOf="@+id/bodyBg"
                    app:layout_constraintRight_toRightOf="@+id/bodyBg"
                    app:layout_constraintTop_toTopOf="@+id/bodyBg" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/navbarTwo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="15dp"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="6dp"
                    app:cardElevation="10dp"
                    app:contentPadding="10dp"
                    app:layout_constraintBottom_toTopOf="@+id/myTask01"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/include_member_con_button">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/myAdTitle01"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginStart="5dp"
                            android:layout_marginTop="5dp"
                            android:text="胡媽媽的灶腳"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/myAdSubTitle01"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="禮盒$388起>"
                            android:textColor="@color/color_cc1e05"
                            android:textSize="14dp"
                            app:layout_constraintLeft_toLeftOf="@+id/myAdTitle01"
                            app:layout_constraintTop_toBottomOf="@+id/myAdTitle01" />

                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_marginEnd="3dp"
                            android:src="@drawable/icon_member_01"
                            app:layout_constraintBottom_toBottomOf="@+id/myAdSubTitle01"
                            app:layout_constraintRight_toLeftOf="@+id/centerline"
                            app:layout_constraintTop_toTopOf="@+id/myAdTitle01" />

                        <TextView
                            android:id="@+id/centerline"
                            android:layout_width="1dp"
                            android:layout_height="0dp"
                            android:background="@color/color_e1e1e1"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/myAdTitle02"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginStart="8dp"
                            android:text="東森小食堂"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            app:layout_constraintLeft_toLeftOf="@+id/centerline"
                            app:layout_constraintTop_toTopOf="@+id/myAdTitle01" />

                        <TextView
                            android:id="@+id/myAdSubTitle02"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="送$88樂透金>"
                            android:textColor="@color/color_cc1e05"
                            android:textSize="14dp"
                            app:layout_constraintLeft_toLeftOf="@+id/myAdTitle02"
                            app:layout_constraintTop_toBottomOf="@+id/myAdTitle02" />

                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_marginEnd="3dp"
                            android:src="@drawable/icon_member_02"
                            app:layout_constraintBottom_toBottomOf="@+id/myAdSubTitle01"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toTopOf="@+id/myAdTitle01" />

                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/myTask01"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="15dp"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="6dp"
                    app:cardElevation="10dp"
                    app:layout_constraintBottom_toTopOf="@+id/navbar01"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/navbarTwo">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/myTaskImg"
                            android:layout_width="match_parent"
                            android:layout_height="70dp"
                            android:background="@drawable/img_tasktitle"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />


                        <com.to.aboomy.pager2banner.Banner
                            android:id="@+id/homePopularAdsBanner"
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            app:indicatorView="@{indicator2}"
                            app:layout_constraintBottom_toTopOf="@+id/indicator2"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/myTaskImg"
                            app:member_banner_adapter="@{memberModel.adBannerList}"
                            app:member_banner_model="@{memberModel}" />

                        <com.to.aboomy.pager2banner.IndicatorView
                            android:id="@+id/indicator2"
                            android:layout_width="wrap_content"
                            android:layout_height="25dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="5dp"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/homePopularAdsBanner"
                            tools:ignore="MissingConstraints" />

                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/navbar01"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="15dp"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="6dp"
                    app:cardElevation="10dp"
                    app:contentPadding="10dp"
                    app:layout_constraintBottom_toTopOf="@+id/remindCard"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/myTask01">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/myOrderTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginStart="5dp"
                            android:layout_marginTop="5dp"
                            android:text="我的訂單"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/myOrderTitle2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="5dp"
                            android:layout_marginEnd="5dp"
                            android:text="查看全部 >"
                            android:textColor="@color/color_75767b"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/line1"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="8dp"
                            android:background="@color/color_e1e1e1"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/myOrderTitle" />

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/myOrderList01"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingTop="10dp"
                            app:layout_constraintTop_toBottomOf="@+id/line1"
                            app:member_order_adapter="@{memberModel.navbarList}"
                            app:member_order_recyclerview="@{memberModel}"
                            tools:itemCount="1"
                            tools:listitem="@layout/recyclerview_navbar_items" />

                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/remindCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="15dp"
                    app:cardBackgroundColor="@color/color_fffde8"
                    app:cardCornerRadius="6dp"
                    app:contentPadding="10dp"
                    app:layout_constraintBottom_toTopOf="@+id/navbar02"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/navbar01">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/remindImg"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/icon_new_notifications_24"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toLeftOf="@+id/remindStr"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/remindStr"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="6dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginEnd="8dp"
                            android:layout_marginBottom="5dp"
                            android:ellipsize="end"
                            android:lines="3"
                            android:text="東森購物不會以訂單或信用卡異常..等原因，請您配合操作ATM或其他付款設定；如有不明來電請向客服確認！"
                            android:textColor="@color/color_cc1e05"
                            android:textSize="14dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintLeft_toRightOf="@+id/remindImg"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/navbar02"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="15dp"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="6dp"
                    app:cardElevation="10dp"
                    app:contentPadding="10dp"
                    app:layout_constraintBottom_toTopOf="@+id/navbar03"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/remindCard">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/myOrderList02"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingTop="10dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:member_tickets_adapter="@{memberModel.myTicketsList}"
                            app:member_tickets_recyclerview="@{memberModel}"
                            tools:itemCount="2"
                            tools:listitem="@layout/recyclerview_tickets_items" />

                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/navbar03"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="15dp"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="6dp"
                    app:cardElevation="10dp"
                    app:contentPadding="10dp"
                    app:layout_constraintBottom_toTopOf="@+id/navbar04"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/navbar02">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/myOrderTitle3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginStart="5dp"
                            android:layout_marginTop="5dp"
                            android:text="優惠百寶箱"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/line3"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="8dp"
                            android:background="@color/color_e1e1e1"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/myOrderTitle3" />

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/myTreasureBoxList02"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingTop="10dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/line3"
                            app:member_TreasureBox_adapter="@{memberModel.myTreasureBoxList}"
                            app:member_TreasureBox_recyclerview="@{memberModel}"
                            tools:itemCount="2"
                            tools:listitem="@layout/recyclerview_navbar_items" />

                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/navbar04"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="15dp"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="6dp"
                    app:cardElevation="10dp"
                    app:layout_constraintBottom_toTopOf="@+id/navbar05"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/navbar03">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/head_img"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_marginStart="12dp"
                            android:layout_marginTop="12dp"
                            android:src="@drawable/gsenlife04"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/myJoinMemberTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginStart="3dp"
                            android:text="加入森活會員"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            app:layout_constraintBottom_toBottomOf="@+id/head_img"
                            app:layout_constraintLeft_toRightOf="@+id/head_img"
                            app:layout_constraintTop_toTopOf="@+id/head_img" />

                        <TextView
                            android:id="@+id/myJoinMemberTitle2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="12dp"
                            android:layout_marginEnd="12dp"
                            android:text="查看說明"
                            android:textColor="@color/color_0065BF"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/line4"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginEnd="10dp"
                            android:background="@color/color_e1e1e1"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/myJoinMemberTitle" />

                        <View
                            android:id="@+id/body_View2"
                            android:layout_width="match_parent"
                            android:layout_height="86dp"
                            app:layout_constraintBottom_toTopOf="@id/bottom_View3"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/line4" />

                        <View
                            android:id="@+id/bottom_View3"
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/body_View2" />

                        <View
                            android:id="@+id/bottom_View3_1"
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_marginBottom="2dp"
                            android:background="@color/color_ededed"
                            app:layout_constraintBottom_toBottomOf="@+id/bottom_View3"
                            app:layout_constraintLeft_toLeftOf="@id/bottom_View3"
                            app:layout_constraintRight_toRightOf="@id/bottom_View3"
                            app:layout_constraintTop_toTopOf="@+id/bottom_View3" />

                        <CheckBox
                            android:id="@+id/check_join"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="10dp"
                            android:textSize="14sp"
                            app:layout_constraintLeft_toLeftOf="@+id/body_View2"
                            app:layout_constraintTop_toTopOf="@id/body_View2" />

                        <TextView
                            android:id="@+id/body_title"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="4dp"
                            android:layout_marginRight="12dp"
                            android:text="同意若訂購商品適合使用循環袋包裝，東森可使用循環袋配送出貨，本人願意配合拆袋後將循環袋送至東森配合之回收點。"
                            android:textColor="@color/color_323232"
                            android:textSize="14sp"
                            app:layout_constraintLeft_toRightOf="@+id/check_join"
                            app:layout_constraintRight_toRightOf="@id/body_View2"
                            app:layout_constraintTop_toTopOf="@id/check_join" />

                        <TextView
                            android:id="@+id/bottom_title"
