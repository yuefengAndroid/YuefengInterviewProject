<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    android:background="@color/color_f7f7f7"
    android:paddingBottom="10dp">

    <View
        android:id="@+id/view_bg"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/color_white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/iv_prod_photo"
        android:layout_width="160dp"
        android:layout_height="0dp"
        android:layout_marginVertical="4dp"
        android:layout_marginStart="4dp"
        android:layout_marginRight="10dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/view_bg"
        tools:ignore="UnknownId" />

    <ImageView
        android:id="@+id/iv_prod_frame"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        android:src="@drawable/bestsellers_demo"
        app:layout_constraintBottom_toBottomOf="@+id/iv_prod_photo"
        app:layout_constraintEnd_toEndOf="@+id/iv_prod_photo"
        app:layout_constraintStart_toStartOf="@+id/iv_prod_photo"
        app:layout_constraintTop_toTopOf="@+id/iv_prod_photo" />

    <TextView
        android:id="@+id/title01"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:ellipsize="end"
        android:lines="1"
        android:maxLines="1"
        android:text="清新柔感 柔嫩親膚"
        android:textColor="@color/color_cc1e05"
        android:textSize="12sp"
        app:layout_constraintLeft_toRightOf="@+id/iv_prod_frame"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/iv_prod_frame" />

    <TextView
        android:id="@+id/title02"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:ellipsize="end"
        android:gravity="left"
        android:lines="2"
        android:maxLines="2"
        tools:text="倍潔雅清新柔感抽取式衛生紙150抽x14包x6袋"
        android:textColor="@color/color_272727"
        android:textSize="14sp"
        app:layout_constraintLeft_toLeftOf="@+id/title01"
        app:layout_constraintRight_toRightOf="@+id/title01"
        app:layout_constraintTop_toBottomOf="@+id/title01" />

    <TextView
        android:id="@+id/money1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:text="#3,796"
        android:textColor="@color/color_cc1e05"
        app:layout_constraintLeft_toLeftOf="@+id/title01"
        app:layout_constraintBottom_toTopOf="@+id/money2"/>

    <TextView
        android:id="@+id/money2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:text="#5,796"
        app:layout_constraintLeft_toLeftOf="@+id/title01"
        app:layout_constraintBottom_toTopOf="@+id/addCartButton"/>

    <TextView
        android:id="@+id/money2Line"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/gray_aaaaaa"
        app:layout_constraintLeft_toLeftOf="@+id/money2"
        app:layout_constraintRight_toRightOf="@+id/money2"
        app:layout_constraintTop_toTopOf="@+id/money2"
        app:layout_constraintBottom_toBottomOf="@+id/money2"/>

    <ImageView
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginEnd="10dp"
        android:src="@drawable/icon_love_24"
        app:layout_constraintTop_toTopOf="@+id/money1"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/money2"/>

    <TextView
        android:id="@+id/addCartButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginEnd="5dp"
        android:text="加入購物車"
        android:background="@drawable/bg_ffffff_radius8"
        android:padding="8dp"
        android:gravity="center"
        android:textSize="14sp"
        app:layout_constraintLeft_toLeftOf="@+id/title01"
        app:layout_constraintRight_toRightOf="@+id/title01"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>